{
  "manifest_version": 2,
  "name": "Color Rewriter",
  "version": "0.1.0",
  "description": "Swap site colors with AIâ€‘generated palettes",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "http://localhost:11434/*",
    "http://127.0.0.1:11434/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
